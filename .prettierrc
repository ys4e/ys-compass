{
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": false,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none",
    "useTabs": false,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrder": [
        "zustand",
        "^react(-.*)$",
        "classnames",
        "^react-(.*)$",
        "^(react-icons/(.*)|lucide-react)$",
        "^(react-window|react-virtualized-auto-sizer)$",
        "<THIRD_PARTY_MODULES>",
        "^@pages/(.*)$",
        "^@components/(.*)$",
        "^@stores/(.*)$",
        "^@hooks/(.*)$",
        "^@backend/(.*)$",
        "^@widgets/(.*)$",
        "^@ui/(.*)$",
        "^@app/(.*)$",
        "^@css/(.*)$"
    ]
}
